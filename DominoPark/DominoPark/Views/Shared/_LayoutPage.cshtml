<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
     <title>Domino Park - @ViewBag.Title</title>
    @Styles.Render("~/Content/Twiter Bootstrap/css/bootstrap.css")   
    @Styles.Render("~/Content/microsoft/css/m-styles.min.css")
    @Scripts.Render("~/Content/microsoft/js/jquery-1.8.0.min.js")
    @Scripts.Render("~/Content/microsoft/js/m-radio.js")
    @Scripts.Render("~/Content/microsoft/js/m-dropdown.js")
    
</head>
<body> 
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">   
                <a class="brand" href="/lobby">Domino Park</a>
                <ul class="nav pull-right">
                    @Html.Partial("_loginPartial")
                </ul>
            </div>
        </div>
    </div>   
    <div>
        <div style="float:left;margin-top:70px; width:250px; margin-left:40px; padding-right:70px;">

            <h4>Game types</h4>
            @Html.ActionLink("Straight domino", "Index", "lobby", null, new {@class="m-btn blue-stripe" })
           
<br />
            @Html.ActionLink("French domino", "french", "lobby", null, new {@class="m-btn purple-stripe" })
           

<br />
<br />
<br />
            <h4>Player Stats</h4>
            <hr/>


            <ul class="nav nav-pills nav-stacked">
              <li class="active" style="color:green;">
                <a href="#">
                  <span class="badge pull-right">42</span>
                  Games Won
                </a>
              </li>
              <li class="active">
                  <a href="#">
                  <span class="badge pull-right">4</span>
                  Games Draw
                 </a>
              </li> 
              <li class="active">
                  <a href="#">
                  <span class="badge pull-right">17</span>
                  Games Lost
                </a>
              </li>             
            </ul>
        </div>
        <div style="margin-top:70px;margin-left:30px;">
             @RenderBody()
        </div>       
    </div>
</body>
</html>
